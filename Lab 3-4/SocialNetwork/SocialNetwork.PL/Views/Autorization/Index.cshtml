@model SocialNetwork.PL.Models.UsersViewModel

@{
    ViewBag.Title = "Autorization";
}

<!DOCTYPE html>
<html>
<head>
    <title>Autorisation</title>
    <meta charset="utf-8"/>
</head>
<body>
    <table align="center">
        <tr>
            <th>LOGIN</th>
        </tr>

        <tr>
            <td>
                @using (Html.BeginForm("LoginUser", "Autorization"))
                {
                    @Html.TextBoxFor(model => model.Email, new { placeholder = "E-mail", @type = "name" })<br>
                    @Html.TextBoxFor(model => model.Password, new { placeholder = "Password", @type = "password" })<br>
                    <input type="submit" name="login" value="Login" />
                }
            </td>           
        </tr>
    </table>

    @if (!string.IsNullOrWhiteSpace(ViewBag.Result))
    {
        <h3 align="center">@ViewBag.Result</h3>
    }
</body>
</html>
